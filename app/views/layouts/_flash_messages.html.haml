- if flash[:alert]
  .toast.align-items-center.text-white.bg-danger.border-0.position-absolute.bottom-0.end-0.show.m-4(role="alert" aria-live="assertive" aria-atomic="true")
    .d-flex
      .toast-body
        = flash[:alert]
      %button.btn-close.btn-close-white.me-2.m-auto(type="button" data-bs-dismiss="toast" aria-label="Close")

- if flash[:notice]
  .toast.align-items-center.text-white.bg-success.border-0.position-absolute.bottom-0.end-0.show.m-4(role="alert" aria-live="assertive" aria-atomic="true")
    .d-flex
      .toast-body
        = flash[:notice]
      %button.btn-close.btn-close-white.me-2.m-auto(type="button" data-bs-dismiss="toast" aria-label="Close")