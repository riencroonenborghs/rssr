- content_for :title do
  Search results for "#{@query}"

#search.container.pt-3
  %h1
    Search results
    .fs-11.fw-ligter ... capped at first 100 results

  = form_with url: search_index_path, method: :post, local: true do |form|
    .row
      .col-12.col-xl-6
        = form.text_field :query, class: "form-control", placeholder: "Type your query", value: @query
      .col-1(class="#{'pt-2' if mobile?}")
        = form.submit "Search", class: "btn"
  
  = render partial: "/shared/page", locals: { entries: @entries }

  