= form_with url: search_index_path, method: :post, local: true do |form|
  .row
    .col-12.col-xl-6.mb-3
      = form.text_field :query, autofocus: true, class: "form-control", placeholder: "Type your query", value: @query
  .row
    .col-12.col-xl-6
      = form.submit "Search", class: "btn btn-primary"