- content_for :title do
  Search

#search.container.pt-3
  %h1 Search

  = form_with url: search_index_path, method: :post, local: true do |form|
    .row
      .col-12.col-xl-6
        = form.text_field :query, class: "form-control", placeholder: "Type your query"
      .col-1(class="#{'pt-2' if mobile?}")
        = form.submit "Search", class: "btn"