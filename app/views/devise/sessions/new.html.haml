- content_for :nav_title do
  Sign in
- content_for :meta_title do
  Sign in

- if mobile?
  #sign-in.p-4
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |form|
      .flex.flex-col
        %div
          = form.label :email, class: "text-sm font-medium"
          .mt-2(class="ms-2 rounded-md ring-1 ring-gray-300 focus-within:ring-1 focus-within:ring-slate-600")
            = form.email_field :email, autofocus: true, autocomplete: "email", class: "block border-0 bg-transparent py-1.5 pl-2 text-gray-900  focus:ring-0 sm:text-sm sm:leading-6"
        .mt-4
          = form.label :password, class: "text-sm font-medium"
          .mt-2(class="ms-2 rounded-md ring-1 ring-gray-300 focus-within:ring-1 focus-within:ring-slate-600")
            = form.password_field :password, autofocus: true, class: "block border-0 bg-transparent py-1.5 pl-2 text-gray-900  focus:ring-0 sm:text-sm sm:leading-6"
        .mt-4
          = form.check_box :remember_me, class: "ms-2 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"
          = form.label :remember_me, class: "text-sm font-medium"
        .mt-4
          = form.submit "Sign In", class: "w-full rounded-md bg-slate-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-slate-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600"
         
         
- else
  #sign-in
    .p-4.w-100
      %h4 Sign in

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |form|
        .row
          .col-12.col-xl-4.mb-3
            = form.label :email, class: "form-label"
            = form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"

        .row
          .col-12.col-xl-4.mb-3
            = form.label :password, class: "form-label"
            = form.password_field :password, autocomplete: "current-password", class: "form-control"
            
        .row
          .col-12.col-xl-4.mb-3
            = form.check_box :remember_me, class: "form-check-input"
            = form.label :remember_me, class: "form-check-label" do              
              Remember me

        .row
          .col-12.col-xl-4
            = form.submit "Log in", class: "btn btn-primary"