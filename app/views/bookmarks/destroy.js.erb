<% if @bookmark.valid? %>
  node = document.querySelector('[data-bookmark-entry-id="<%= @bookmark.entry.id %>"]');
  node.classList.add('text-zinc-300')
  bookmarked = node.getElementsByClassName("bookmarked")[0];
  notBookmarked = node.getElementsByClassName("not-bookmarked")[0];

  bookmarked.classList.add('hidden');
  notBookmarked.classList.remove('hidden');
  node.classList.remove('text-zinc-300');
<% end %>