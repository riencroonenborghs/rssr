- entries.in_groups_of(mobile? ? 1 : 3) do |group|
  %tr
    - group.compact.each do |entry|
      %td.entry-wrapper(style="padding: 0px;" class="#{'entries--viewed' if user_signed_in? && entry.viewed_by?(current_user)}" data-entry-id="#{entry.id}")
        %table(style="width: 100%")
          %tr
            - if entry.image_url
              %td
                %figure.image.is-96x96
                  =image_tag entry.image_url
            %td(colspan="#{entry.image_url ? 1 : 2}")
              .is-size-6.is-flex.is-align-items-flex-start.is-justify-content-space-between
                - if entry.summary
                  = link_to "#", class: "summary entries--title", data: { id: entry.id } do
                    = entry.title
                - else
                  = link_to entry.url, class: "entries--title", target: "_blank" do
                    = entry.title
                - if user_signed_in?
                  = render partial: "/sharedv2/read_later", locals: { entry: entry }
              .is-flex.is-align-items-center
                .is-size-7.pr-1
                  = link_to entry.feed.name, feed_entries_path(entry.feed)            
                .is-size-8
                  \\
                  = distance_of_time_in_words_to_now entry.published_at
                  ago
              %div
                = tag_links_v2 entry.feed
                - if entry.summary
                  = render partial: "/sharedv2/summary", locals: { entry: entry }
