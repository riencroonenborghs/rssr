- entries.each do |entry|
  %li.list-group-item
    .d-flex.flex-column
      .meta.d-flex.justify-content-between
        .fs-10
          =link_to entry.feed.title, feed_entries_path(entry.feed), class: "text-decoration-none"
        .fs-11.fw-lighter.ts(title="#{entry.published_at.in_time_zone("Pacific/Auckland").to_formatted_s(:long)}")
          =time_ago_in_words entry.published_at
          ago
      .title-and-image.d-flex.justify-content-between
        .title.pe-4.pt-2
          =link_to entry.title, "#", class: "text-decoration-none", "data-bs-toggle" => "modal", "data-bs-target" => "#entry-#{entry.id}"            
        - if entry.image_url
          .image.d-flex.flex-column.justify-content-center
            =image_tag entry.image_url, width: "100px", class: "rounded"
      .tags.fs-10.fw-lighter.d-flex.justify-content-end.pb-2
        = tags entry.feed

      .modal.fade(id="entry-#{entry.id}" tabindex="-1" aria-labelledby="entry-#{entry.id}-label" aria-hidden="true")
        .modal-dialog.modal-dialog-scrollable.modal-dialog-centered.modal-fullscreen
          .modal-content
            .modal-header.d-block
              .row
                .col-10
                  .d-flex.flex-column
                    .d-flex.justify-content-between
                      .fs-10
                        =link_to entry.feed.title, feed_entries_path(entry.feed), class: "text-decoration-none"
                      .fs-11.fw-lighter(title="#{entry.published_at.in_time_zone("Pacific/Auckland").to_formatted_s(:long)}")
                        =time_ago_in_words entry.published_at
                        ago
                    %div
                      =link_to entry.title, entry.url, class: "text-decoration-none", target: "_blank"
                .col-2.d-flex.justify-content-end
                  =link_to "#", class: "btn", "data-bs-dismiss" => "modal", "aria-label" => "Close" do
                    %i.bi.bi-x-lg
            .modal-body
              - if entry.image_url
                =image_tag entry.image_url, width: "100px", class: "rounded me-3", align: "left"
              %p=raw clean_summary(entry)