.p-2
  .font-bold.text-4xl
    = link_to @feed.url, @feed.url, target: "_blank"

  .pt-4
    Found 
    = pluralize @service.rss_feeds.size, "RSS feed"

  .pt-4
    .grid.grid-cols-2.gap-2
      - @service.rss_feeds.each do |rss_feed|
        = render CardComponent.new do |c|
          = c.with_body do
            .flex.flex-col
              %div
                = rss_feed.href
              .font-thin
                = rss_feed.title
          = c.with_footer do
            %div
            = form_with(model: @subscription, url: [:admin, @subscription], method: :post, local: true) do |form|
              = form.hidden_field :step, value: @step
              = form.hidden_field :url, value: @feed.url
              = form.hidden_field :rss_url, value: rss_feed.href
              = form.submit "Next", class: "rounded-md bg-slate-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-slate-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600"
