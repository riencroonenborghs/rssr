- content_for :nav_title do
  Filters
- content_for :meta_title do
  Filters

#filters.p-2.pt-0.w-100
  .flex.flex-row.justify-end.pb-2.pt-2
    = link_to new_admin_filter_path do
      .flex.flex-row.border.p-2.rounded-lg
        %svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6")
          %path(stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15")
        .ms-2 New Filter


  .ps-4
    .grid.grid-cols-4.gap-2
      - @filters.each_with_index do |filter, index|
        .shadow-sm.border.rounded.p-2.m-2
          .flex.flex-col.justify-between.h-full
            .pb-2
              .flex.flex-row
                The
                .ms-1 title
                .ms-1.font-bold= filter.human_readable_comparison
              .font-bold
                = filter.value.upcase
            .border-t.pt-2
              .flex.flex-row.justify-end
                = link_to edit_admin_filter_path(filter.id) do
                  .border.rounded.p-2.pt-1.pb-1
                    Edit
                = link_to admin_filter_path(filter.id), method: :delete, data: { confirm: "Are you sure?" }, class: "ms-2" do
                  .rounded.p-2.pt-1.pb-1.bg-red-500.text-white
                    Remove