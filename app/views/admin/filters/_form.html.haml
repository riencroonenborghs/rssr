= form_with(scope: :filter, url: filter.id ? admin_filter_path(filter) : admin_filters_path, local: true, method: filter.id ? "patch" : "post") do |form|  
  = form.hidden_field :id, value: filter.id
  
  .flex.flex-row
    = form.select :comparison, [["contains the word(s)","eq"], ["does not contain the word(s)", "ne"]], { selected: filter.comparison, include_blank: false }, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-slate-600 sm:max-w-xs sm:text-sm sm:leading-6"

    %div(class="flex flex-col rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-slate-600 sm:max-w-md")
      = form.text_field :value, class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 #{'border-danger' if filter.errors[:value].any?}", value: filter.value, placeholder: "e.g. facebook", autocomplete: true
      - if filter.errors[:value].any?
        .text-danger.fs-11
          = filter.errors[:value].join(', ')

  .flex.flex-row.pt-3
    = form.submit "#{filter.new_record? ? "Create" : "Update"} Filter", class: "rounded-md bg-slate-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600"
      