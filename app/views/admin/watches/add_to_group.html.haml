- content_for :nav_title do
  Add to Watch
- content_for :meta_title do
  Add to Watch

#add-watch.p-2.pt-0.w-100
  - if @current_watches.any?
    .p-4.pb-0
      - @current_watches.each.with_index do |watch, index|
        = watch.human_readable
        - if index + 1 < @current_watches.size
          %strong.fw-lighter &nbsp;and
  
  .p-4
    = form_with(scope: :watch, url: admin_watches_path, local: true, method: "post") do |form|  
      = form.hidden_field :group_id, value: @watch.group_id
      
      .flex.flex-row
        .flex.flex-col
          = form.select :watch_type, [["entry title contains", "entry_title"], ["entry description contains", "entry_description"], ["is tagged with", "feed_tag"]], { selected: @watch.watch_type, include_blank: false }, class: "block border-0 bg-transparent py-1.5 pl-2 text-gray-900 focus:ring-1 sm:text-sm sm:leading-6 rounded-md ring-1 ring-gray-300 focus:ring-slate-600"

        .flex.flex-col(class="w-1/2")
          %div(class="ms-2 w-1/2 rounded-md ring-1 ring-gray-300 focus-within:ring-1 focus-within:ring-slate-600")
            = form.text_field :value, class: "block border-0 bg-transparent py-1.5 pl-2 text-gray-900  focus:ring-0 sm:text-sm sm:leading-6 #{'border-danger' if @watch.errors[:value].any?}", value: @watch.value, autocomplete: true
          - if @watch.errors[:value].any?
            .text-red-500.text-xxs.pl-2
              = @watch.errors[:value].join(', ')

      .flex.flex-row.pt-3
        = form.submit "Add to Watch", class: "rounded-md bg-slate-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600"
