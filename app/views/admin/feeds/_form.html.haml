= form_with(model: [:admin, feed], local: true) do |form|
  - if feed.errors.any?
    #error_explanation
      %h2
        = pluralize(feed.errors.count, "error")
        prohibited this feed from being saved:

      %ul
        = feed.errors.full_messages.each do |message|
          %li= message

  .row
    .col-6
      = form.label :title, class: "form-label"
      = form.text_field :title, class: "form-control"

    .col-6
      = form.label :tag_list, class: "form-label"
      = form.text_field :tag_list, value: feed.tag_list.join(", "), class: "form-control"

    .col-12
      = form.label :url, "URL", class: "form-label"
      = form.text_field :url, class: "form-control"

    .col-12.pt-2.pb-2
      = form.check_box :active, class: "form-check-input"
      = form.label :active, class: "form-check-label"

    .col-12.lead.fs-10.fw-lighter
      %ul.list-group.list-group-flush
        %li.list-group-item Feed title will automatically be filled in when created, unless you specifiy your own.
        %li.list-group-item You do have to give your own (comma separated) tags.
        %li.list-group-item URLs support youtube channel format.

    .col-12.pt-2
      = form.submit "#{feed.new_record? ? "Create" : "Update"} Feed", class: "btn"

