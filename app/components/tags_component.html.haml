%span.flex.flex-row.flex-wrap
  - (@tags || []).each do |tag|
    - if @subscription_based
      = link_to tagged_feeds_path(tag.upcase) do
        .rounded.bg-emerald-400.text-white.text-xtiny.ps-1.pe-1.me-1.mb-1
          = tag.upcase
    - else
      = link_to entry_tagged_feeds_path(tag.upcase) do
        .rounded.bg-emerald-500.text-white.text-xtiny.ps-1.pe-1.me-1.mb-1
          = tag.upcase